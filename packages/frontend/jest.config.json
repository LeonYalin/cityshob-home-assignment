{
  "preset": "jest-preset-angular",
  "setupFilesAfterEnv": ["<rootDir>/src/setup-jest.ts"],
  "testEnvironment": "jsdom",
  "transformIgnorePatterns": [
    "node_modules/(?!(@angular|@testing-library|rxjs|zone.js)/)"
  ],
  "testMatch": [
    "**/src/**/*.spec.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.d.ts",
    "!src/main.ts"
  ]
}